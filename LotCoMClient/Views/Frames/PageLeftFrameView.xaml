<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:LotCoMClient.Views.Frames"
             x:Name="this"
             x:Class="LotCoMClient.Views.Frames.PageLeftFrameView"
             x:DataType="local:PageLeftFrameView"
             BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource OffBlack}}">

    <HorizontalStackLayout
        x:Name="PageLeftFrameLayout"
        IsVisible="{Binding LeftFrameShown}"
        Margin="0"
        BackgroundColor="{AppThemeBinding Light=WhiteSmoke, Dark={StaticResource Gray900}}">

        <!-- Grid to Control Vertical/Horizontal Elements -->
        <Grid>
            <Grid.RowDefinitions>
                <!-- Left Frame Header Row -->
                <RowDefinition Height="50"/>
                <!-- Left Frame Body Row -->
                <RowDefinition Height="*"/>
                <!-- Left Frame Footer Row -->
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <!-- Left Frame Main Column -->
                <ColumnDefinition Width="150"/>
            </Grid.ColumnDefinitions>

            <!-- Left Frame Header Label -->
            <Label 
                x:Name="PageLeftFrameHeaderLabel"
                Margin="0,20,0,0"
                Grid.Row="0"
                Grid.Column="0"
                Text="{Binding FramePanelHeader}"
                TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"
                FontSize="16"
                VerticalOptions="Center"
                HorizontalOptions="Center"/>

            <!-- Left Frame Footer Label -->
            <Label 
                x:Name="PageLeftFrameFooterLabel"
                Margin="0,20,0,0"
                Grid.Row="0"
                Grid.Column="0"
                Text="{Binding FramePanelFooter}"
                TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"
                FontSize="16"
                VerticalOptions="Center"
                HorizontalOptions="Center"/>

            <!-- Left Frame Right Border -->
            <BoxView
                x:Name="PageLeftFrameRightBorder"
                Grid.Row="0"
                Grid.RowSpan="3"
                Grid.Column="0"
                WidthRequest="1"
                HorizontalOptions="End"
                VerticalOptions="Fill"
                BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray600}}"/>
        </Grid>
    </HorizontalStackLayout>
</ContentView>